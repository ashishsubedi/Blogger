extends layout

block content
  .container
    .jumbotron
      h1 Welcome to #{title}
      if user
        h1 Welcome, #{user.fullName}
        form(action="/users/logout" method="POST")
        button(type="submit").btn.btn-default#logout Logout
      else
        p Welcome to my app, ready to get started?
        p
          a#login.btn.btn-primary(href="/users/login") Login now
          a#login.btn.btn-primary(href="/users/google") SignIn with Google
        
        p
          span.small Don't have an account?
          span &nbsp;
          a#register.small(href="/users/register") Register now


